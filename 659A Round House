#include<bits/stdc++.h>
using namespace std;
#define endl '\n'
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define fraction() cout.unsetf(ios::floatfield); cout.precision(10); cout.setf(ios::fixed,ios::floatfield);
int main()
{
    optimize();
    int n,a,b,x;
    cin>>n>>a>>b;
    b = b%n;
    if(b<0) x = a+b+n;
    else x = a+b;
    if(x%n==0) cout<<n<<endl;
    else cout<<(x%n)<<endl;

    return 0;
}
