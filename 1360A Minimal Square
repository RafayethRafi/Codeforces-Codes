#include<bits/stdc++.h>
using namespace std;
#define endl '\n'
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define fraction() cout.unsetf(ios::floatfield); cout.precision(10); cout.setf(ios::fixed,ios::floatfield);
int main()
{
    optimize();
    int t;
    cin>>t;
    while(t--)
    {
        int a,b;
        cin>>a>>b;
        int x = min(a,b);
        int y = max(a,b);
        x = 2*x;

        if(x>=y) cout<<(x*x)<<endl;
        else cout<<y*y<<endl;
    }

    return 0;
}

