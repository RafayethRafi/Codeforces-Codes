#include<bits/stdc++.h>
using namespace std;
#define endl '\n'
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
int main()
{
    optimize();

    int t;
    cin>>t;
    while(t--)
    {
        int a,b,c;
        cin>>a>>b>>c;

        int r = abs(a-b);

        int x = 2*r;

        if(a>x||b>x||c>x)
            cout<<"-1"<<endl;
        else if(a!=(c+r) && b!=(c+r) && (c+r)>0 && (c+r)<=x)
            cout<<(c+r)<<endl;
        else if(a!=(c-r) && b!=(c-r) && (c-r)>0 && (c-r)<=x)
            cout<<(c-r)<<endl;
        else cout<<"-1"<<endl;


    }

    return 0;
}
