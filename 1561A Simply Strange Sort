Â 
#include<bits/stdc++.h>
using namespace std;
#define endl '\n'
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
int main()
{
    optimize();
    int t,i;
    cin>>t;
    while(t--)
    {
        int n,k=1;
        cin>>n;
        vector<int>a(n),b(n);
        for(i=0;i<n;i++) cin>>a[i];

        b = a;
        sort(b.begin(),b.end());
        if(b==a)
        {
             cout<<"0"<<endl;
            continue;
        }
        else
        {
            while(b!=a)
            {
                if(k%2)
                {
                    for(i=0;i<n-2;i+=2)
                    {
                        if(a[i]>a[i+1])
                            swap(a[i],a[i+1]);
                    }
                }
                else
                {
                   for(i=1;i<n-1;i+=2)
                    {
                        if(a[i]>a[i+1])
                            swap(a[i],a[i+1]);
                    }
                }
                k++;
            }
        }

          cout<<k-1<<endl;
    }

    return 0;
}
