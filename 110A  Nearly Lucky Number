#include<bits/stdc++.h>
using namespace std;
int main()
{
    string s;
    cin>>s;
    int i,x=s.size(),cnt=0;

    for(i=0;i<x;i++)
    {
        if(s[i]=='4' || s[i] == '7')
            cnt++;
    }
    if(cnt==7 || cnt==4)
        cout<<"YES"<<endl;
    else
        cout<<"NO" <<endl;


    return 0;
}
