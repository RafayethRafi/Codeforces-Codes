//https://codeforces.com/contest/1560/problem/A


#include<bits/stdc++.h>
using namespace std;
#define endl '\n'
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
int main()
{
    optimize();
    int t,i,j=1;
    cin>>t;

    int a[1500];
    for(i=1;i<=1200;)
    {
        if(j%3!=0 && j%10!=3)
            {
                a[i] = j;
                i++;
            }
        j++;
    }
    while(t--)
    {
        int n;
        cin>>n;
        cout<<a[n]<<endl;
    }

    return 0;
}
