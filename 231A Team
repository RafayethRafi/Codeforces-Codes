//https://codeforces.com/problemset/problem/231/A


#include<bits/stdc++.h>
using namespace std;
#define endl '\n'
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
int main()
{
    optimize();
    int n,i,j,cnt2=0;
    cin>>n;

    for(i=0;i<n;i++)
    {
        int cnt=0;

        for(j=0;j<3;j++)
        {
            int x;
            cin>>x;
            if(x==1) cnt++;
        }
        if(cnt>=2) cnt2++;
    }
    cout<<cnt2<<endl;

    return 0;
}
