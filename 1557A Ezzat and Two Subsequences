#include<bits/stdc++.h>
using namespace std;

#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

int main()
{
    optimize();

    int t,i;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        int a[n];
        long long sum=0;
        for(i=0;i<n;i++)
        {
            cin>>a[i];

            sum += a[i];
        }

        sort(a,a+n);
        double x = a[n-1];
        sum = sum-x;
        double y = (double)sum/(double)(n-1);

        cout<<fixed<<setprecision(9)<<(x+y)<<endl;


    }
    return 0;
}


